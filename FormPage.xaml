<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Requests.FormPage"
             Title="FormPage">
    
    <!-- Main view -->
    <VerticalStackLayout>
        <!-- Campo de nombre -->
        <HorizontalStackLayout>
            <Label
                Text="Nombre: " />
            <Entry
                x:Name="txtNombre" />
        </HorizontalStackLayout>
        
        <!-- Campo de apellido -->
        <HorizontalStackLayout>
            <Label
                Text="Apellido: " />
            <Entry
                x:Name="txtApellido" />
        </HorizontalStackLayout>
        
        <!-- Campo de sexo -->
        <HorizontalStackLayout>
            <Label
                Text="Sexo: " />
            <Entry
                x:Name="txtSexo" />
        </HorizontalStackLayout>
        
        <!-- Campo fecha nacimiento -->
        <HorizontalStackLayout>
            <Label
                Text="Fecha nacimiento: " />
            <Entry
                x:Name="txtFhNac" />
        </HorizontalStackLayout>
        
        <!-- Campo ID rol -->
        <HorizontalStackLayout>
            <Label
                Text="ID rol: " />
            <Entry
                x:Name="txtIdRol" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>